{
    "manifest_version": 2,
    "name": "nazeka",
    "version": "0.01",

    "permissions": [
        "contextMenus",
        "storage"
    ],
    
    "background": {
        "scripts": ["background-script.js"]
    },

    "web_accessible_resources": [
        "dict/JMdict.json"
    ],

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file:///*"],
            "js": ["texthook.js"],
            "all_frames": true
        }
    ]
}
